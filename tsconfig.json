{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "exceptions/*": [
        "src/exceptions/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}